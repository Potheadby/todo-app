.todo-app
  header.app-header
    form(ng-submit='doSearch()')
      input(type='search', ng-model='query')

    form(ng-submit='addTodo()')
      input(type='text', ng-model='newTodo', placeholder='What needs to be done?', autofocus)
      button +

  section.app-content
    ul.todo-list
      li.todo-list-item(ng-repeat='todo in todos | orderBy:"-created"', ng-class='{ done: todo.done, editing: todo == editedTodo }')
        input.todo-toggle(type='checkbox', ng-model='todo.done', ng-change='doneEditing(todo)')
        label(ng-dblclick='editTodo(todo)') {{ todo.text }}

        form(ng-submit='doneEditing(todo)')
          input(ng-model='todo.text', ng-change='editTodo(todo)', ng-trim='true', ng-blur='doneEditing(todo)', todo-focus="todo == editedTodo")

        button.todo-destroy(ng-click='destroyTodo(todo)')

  footer.app-footer 123
