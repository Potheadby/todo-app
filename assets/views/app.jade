form(name='form', ng-submit='addTodo()')
  input(type='text', ng-model='newTodo.title', placeholder='What needs to be done?', autofocus)
  input(type='text', ng-model='newTodo.body')
  button +

table
  tr(ng-repeat='todo in todos | orderBy: "-created"')
    td
      input(type='checkbox', ng-model='todo.done', ng-change='editTodo(todo)')
    td
      input(ng-model='todo.title', ng-change='editTodo(todo)')
    td
      input(ng-model='todo.body', ng-change='editTodo(todo)')
    td
      button(ng-click='destroyTodo(todo)') X