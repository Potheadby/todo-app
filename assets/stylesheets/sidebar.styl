.sidebar
  position fixed
  z-index sidebar-z-index
  top 0
  bottom 0
  width sidebar-width
  background #182028
  border-top header-height solid base-color
  box-shadow 1px 0 3px rgba(#000, .2)

.sidebar-nav
  margin-top 20px

  i
    font-size 1.3em
    width 26px
    display inline-block
    text-align left
    color base-color
    vertical-align bottom

  ul
    list-style none
    padding 0
    margin 0

  li
    padding 15px 10px 15px 16px

    > a
      color #ff
      text-decoration none

      &:hover
      &.active
        color base-color

  .add-new
    border-top 1px solid #2c3947
    padding-top 24px
    margin-top 7px

    i
      color #47ec6e


