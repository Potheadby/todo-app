.form-line + .form-line
  margin-top: 9px

.form-control
  border 1px solid #a4b4c0
  border-radius 2px
  box-shadow inset 0 1px 2px rgba(#000, .1);
  padding: 7px
  width: 100%

  &:focus
    border-color: base-color

.form-buttons
  text-align: right

  .btn
    margin-left: 7px
    
.settings-form
  width: 450px
  border-radius 2px
  padding: 16px  16px 24px
  box-shadow 0 1px 2px rgba(#000, .1);
  background-color #fff;

  form
    min-height 120px
    padding: 0 0 0 150px
    background-position 0 0;
    background-repeat no-repeat
    background-image url('../img/phone.png');