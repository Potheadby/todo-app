@import "normalize.css/normalize.css"

html
  height 100%

html
body
  min-height 100%

body
  font 16px / 1.4 Helvetica, Arial, sans-serif
  background-color #269
  background-image linear-gradient(rgba(#fff, .2) 1px, transparent 1px), linear-gradient(90deg, rgba(#fff, .2) 1px, transparent 1px), linear-gradient(rgba(#fff, .1) 1px, transparent 1px), linear-gradient(90deg, rgba(#fff, .1) 1px, transparent 1px)
  background-size 100px 100px, 100px 100px, 20px 20px, 20px 20px
  background-position: -1px -1px, -1px -1px, -1px -1px, -1px -1px

*
  box-sizing border-box
  outline 0 none

button
  background transparent
  border 0 none
  padding 0
  margin 0
  
.credits
  text-align center
  margin 80px 0
  font-size .9em
  color #dd

  a
    color #dd

.todo-app
  margin 0 auto
  padding 40px 0
  position relative
  width 40%


.app-header
.app-content
  position relative
  z-index 2

.app-header
  text-align center

  .search-block
    padding 10px
    background linear-gradient(top, #eee, #999)

    input
      width 100%
      line-height 1.4em
      border-radius 50px
      border 1px solid #9d9d9d
      padding 0 5px
      box-sizing border-box
      -webkit-appearance textfield

  h1
    color #fff
    font-weight 500
    margin 0
    font-size 1.5em
    line-height 2.5em
    text-shadow 0 -1px #000
    background linear-gradient(top, #55, #33)
    border 1px solid #33
    border-radius 2px 2px 0 0

.app-content
  box-shadow 0 2px 6px 0 rgba(#000, .2), 0 25px 50px 0 rgba(#000, .15)

  &:before
    content ''
    border-left 1px solid #f5d6d6
    border-right 1px solid #f5d6d6
    width 2px
    position absolute
    top 0
    left 48px
    height 100%

.todo-list
  list-style none
  margin 0 auto
  padding 0
  background #f7f7f7

.todo-list-item
  position relative
  user-select none
  line-height 3em
  padding-left 58px
  border-bottom 1px dotted #ccc

  &.done
    color #bb
    text-decoration line-through

  &:last-child
    border 0 none

  .todo-toggle
    position absolute
    left 0
    top 0
    height 100%
    text-align center
    width 48px

  .todo-text
    user-select none
    display block
    overflow hidden
    text-overflow ellipsis

  input[type='text']
    width 100%
    border 0 none
    background #f7f7f7
    padding 0
    margin 0

  .todo-editor
    display none

  &.editing
    .todo-text
      display none

    .todo-editor
      display block

  &:hover
    .todo-destroy
      display block

.todo-destroy
  display none
  position absolute
  top 0
  right 10px
  bottom 0
  width 48px
  height 48px
  font-size 22px
  color #a88a8a
  transition all 0.2s

  &:after
    content 'âœ–'

  &:hover
    text-shadow 0 0 1px #000, 0 0 10px rgba(199, 107, 107, 0.8)
    transform scale(1.3)


.app-footer
  color #d9d9d9
  padding 20px 15px 10px 15px
  position absolute
  right 0
  bottom -9px
  left 0
  height 20px
  z-index 1
  text-align center

  &:before
    content ''
    position absolute
    right 0
    bottom 49px
    left 0
    height 50px
    z-index -1
    box-shadow 0 1px 1px rgba(#000, 0.3), 0 6px 0 -2px rgba(#fff, 0.8), 0 7px 1px -2px rgba(#000, 0.3), 0 12px 0 -4px rgba(#fff, 0.8), 0 13px 1px -4px rgba(#000, 0.3), 0 16px 0 -6px rgba(#fff, 0.8), 0 17px 1px -6px rgba(#000, 0.3)

.todo-pagination
  text-align: center
  position: relative
  font-size: .9em
  color #99

  .page-count
    margin: 0 40px

  a
    color #99
    width: 30px
    text-decoration: none
    padding-right: 10px
    font-size: 1.6em
    transition all 0.2s

    &:hover
      color #99
      text-shadow 0 0 1px #000, 0 0 10px rgba(#99, 0.5)
      transform scale(1.3)

    &.prev
      float left

    &.next
      float right