.dropdown
  position: relative

.dropdown-list
  display none
  min-width: 120px
  border-radius 3px
  z-index: sidebar-z-index + 10
  position: absolute
  list-style: none
  padding: 7px 8px
  margin: 0
  background: #fff
  box-shadow 0 0 15px rgba(#000, .3)
  right: -21px
  top: 100%
  margin-top: 12px

  &:before
    content ""
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 0 5px 5px 5px;
    border-color: transparent transparent #fff transparent;
    position: absolute;
    top: -5px;
    right: 23px

.dropdown-list-item
  padding: 4px
  white-space: nowrap;

  i
    display inline-block
    width: 16px
    color #bec5ce

  a
    display block
    padding: 5px;
    line-height: 1.2;
    color base-font-color
    text-decoration: none

    &:hover
      background: #f1f4f7
      border-radius 2px

.dropdown.open
  .dropdown-list
    display block