.dropdown
  position relative

.dropdown-content
  position absolute
  min-width 120px
  display none
  border-radius 3px
  background #fff
  box-shadow 0 0 15px rgba(#000, .3)
  right -21px
  top 100%
  margin-top 12px
  z-index sidebar-z-index + 10

  &:before
    content ""
    width 0
    height 0
    border-style solid
    border-width 0 5px 5px 5px
    border-color transparent transparent #fff transparent
    position absolute
    top -5px
    right 23px

.dropdown-list
  list-style none
  padding 7px 8px
  margin 0

.dropdown-list-item
  padding 4px
  white-space nowrap

  i
    display inline-block
    width 16px
    color #bec5ce

  a
    display block
    padding 5px
    line-height 1.2
    color base-font-color
    text-decoration none

    &:hover
      background #f1f4f7
      border-radius 2px

.dropdown.open
  .dropdown-content
    display block

.dropdown.right
  .dropdown-content
    padding 13px
    width 480px
    top 0
    right auto
    left 100%
    margin-left 23px

    &:before
      top 20px
      right auto
      left -5px
      border-width 5px 5px 5px 0
      border-color transparent #fff transparent transparent
